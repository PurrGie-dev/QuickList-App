<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.esb.quicklist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuickList">

        <!-- Login Activity (Launcher) -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />

        <!-- SignUp Activity -->
        <activity
            android:name=".activities.SignUpActivity"
            android:exported="false" />

        <!-- ForgotPassword Activity -->
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false" />

        <!-- CreateList Activity -->
        <activity
            android:name=".activities.CreateListActivity"
            android:exported="false" />

        <!-- JoinList Activity -->
        <activity
            android:name=".activities.JoinListActivity"
            android:exported="false" />

        <activity
            android:name=".management.ViewListsActivity"
            android:exported="false" />
        <activity
            android:name=".management.ManageListsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AdminDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".management.ManageListActivity"
            android:exported="false" />
        <activity android:name=".activities.ShoppingListDetailActivity" />

    </application>

</manifest>